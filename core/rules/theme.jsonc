{
  // Theme configuration for web application
  "branding": {
    "name": "Lytx",
    "logo": {
      "primary": "./public/images/android-chrome-192x192.png",
      "secondary": "./public/images/favicon-32x32.png",
      "favicon": "./public/images/favicon-16x16.png"
    },
    "fonts": {
      "primary": "Inter, sans-serif",
      "secondary": "Roboto, sans-serif",
      "code": "Fira Code, monospace"
    }
  },
